doctype html
html
    head
        meta(charset='utf-8')
    body
        h1  
            a(href='/portfolio') Server_side_Javscript
        ul
            each topic in topics
                li
                    a(href='/portfolio/'+topic.id)= topic.title
        article
            form(action='/portfolio/'+topic.id+'/edit' method='post')
                p
                    input(type='text' name='title' value=topic.title placeholder='title')
                p
                    input(type='text' name='author' value=topic.author placeholder='author')
                p
                    textarea(name='description')
                        =topic.description
                p
                    input(type='submit')
        ul(id='add_item')
            li
                a(href='/portfolio/add') ADD ITEM
