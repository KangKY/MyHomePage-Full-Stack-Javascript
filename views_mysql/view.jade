doctype html
html
    head
        meta(charset='utf-8')
    body
        h1  
            a(href='/portfolio') Server_side_Javscript
        ul
            each topic in topics
                li
                    a(href='/topic/'+topic.id)= topic.title
        article
            if topic
                h2= topic.title 
                = topic.description
            else
                h2 Welcome
                | This is server side Javascript tutorial.
        ul(id='add_item')
            li
                a(href='/portfolio/add') ADD ITEM
            if(topic)
                li
                    a(href='/portfolio/'+topic.id+'/edit') EDIT ITEM
                li
                    a(href='/portfolio/'+topic.id+'/delete') DELETE ITEM    