doctype html
html
    head
        meta(charset='utf-8')
    body
      h1  
        a(href='/portfolio') Server_side_Javscript
      ul
        each topic in topics
            li
                a(href='/portfolio/'+topic.id)= topic.title
        article
            h1= 'Are you sure delete this item? ' + topic.title
            form(action='/portfolio/'+topic.id+'/delete' method='post' )
                span
                    input(type='submit' name = 'yes' value='YES')
                    input(type='submit' value='NO')